# ========================================
# InterceptorSystem - Environment Variables
# ========================================
# Copie este arquivo para .env e configure com seus valores

# Database PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_aqui
POSTGRES_DB=interceptor_db

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ConnectionStrings__DefaultConnection=Host=interceptor_db;Database=interceptor_db;Username=postgres;Password=sua_senha_aqui

# Ports
API_PORT=5000
NGINX_PORT=80
POSTGRES_PORT=5432

# JWT (opcional - para autenticação futura)
JWT_SECRET=sua_chave_secreta_aqui
JWT_ISSUER=InterceptorSystem
JWT_AUDIENCE=InterceptorSystemClient

# Email (opcional - para notificações futuras)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=seu_email@example.com
SMTP_PASSWORD=sua_senha_email
SMTP_FROM=noreply@example.com

